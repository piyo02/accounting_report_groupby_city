<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="city_temp">
        <t t-call="report.external_layout">
            <div class="page">
                <div class="oe_structure"/>
                    <div class="row">
                    <center>
                        <b>
                            <h4>Piutang dan Kredit Limit per Kota</h4>
                        </b>
                    </center>
                    <center>
                        <b>
                            <span t-esc="start_date"/>
                            To
                            <span t-esc="end_date"/>
                        </b>
                    </center>
                </div>
                <br/>
                <t t-foreach="data.keys()" t-as="city">
                    <t t-if="data[city]">
                        <center style="margin-bottom: 10px;">
                            <b>
                                <span t-esc="city"/>
                            </b>
                        </center>
                    </t>
                    <t t-set="total_sum" t-value="0"/>
                    <t t-set="current_partner" t-value="a"/>
                    <t t-set="amount_total_invoice" t-value="0"/>

                    <t t-foreach="data[city]" t-as="invoices">
                        <t t-if="invoices[2] == []">
                            <t t-if="invoices[4] == 1">
                                <table class="table table-condensed table-striped">
                                    <thead >
                                        <tr>
                                            <th>Pelanggan</th>
                                            <th class="text-right">Tagihan</th>
                                            <th class="text-right">Kredit Limit</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>
                                                <span t-esc="invoices[0]"/>
                                            </td>
                                            <td class="text-right">0</td>
                                            <td class="text-right">
                                                <span t-esc="'{:,}'.format(invoices[1])"/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </t>
                        </t>
                        <t t-else="">
                            <table class="table table-condensed table-striped">
                                <thead >
                                    <tr>
                                        <th>Pelanggan</th>
                                        <th class="text-right">Kredit Limit</th>
                                        <th class="text-right">Sisa Kredit Limit</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            <span t-esc="invoices[0]"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="'{:,}'.format(invoices[1])"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="'{:,}'.format(invoices[1]-invoices[3])"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            <t t-foreach="invoices[2]" t-as="invoice">
                                <table class="table table-condensed table-striped">
                                    <tbody>
                                        <tr>
                                            <td><b>Sumber Dokumen</b></td>
                                            <td><b>Salesperson</b></td>
                                            <td><b>Tanggal Jatuh Tempo</b></td>
                                            <td><b>Tanggal Tagihan</b></td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <span t-esc="invoice[3]"/>
                                            </td>
                                            <td>
                                                <span t-esc="invoice[6]"/>
                                            </td>
                                            <td>
                                                <span t-esc="invoice[0]"/>
                                            </td>
                                            <td>
                                                <span t-esc="invoice[2]"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td colspan="2"><b>No Transaksi</b></td>
                                            <td class="text-right"><b>Total Tagihan</b></td>
                                            <td class="text-right"><b>Sisa Tagihan</b></td>
                                        </tr>
                                        <tr>
                                            <td colspan="2">
                                                <span t-esc="invoice[1]"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="'{:,}'.format(invoice[4])"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="'{:,}'.format(invoice[5])"/>
                                                <t t-set="total_sum" t-value="total_sum + invoice[5]"/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </t>
                        </t>
                    </t>

                    <t t-if="total_sum > 0">
                        <div class="row">
                            <div class="col-xs-4 pull-right">
                                <table class="table table-condensed">
                                    <tr>
                                        <td><strong>Total</strong></td>
                                        <td class="text-right">
                                            <span t-esc="'{:,}'.format(total_sum)"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </t>
                </t>
            </div>
        </t>
    </template>
</odoo>