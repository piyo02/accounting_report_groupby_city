<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="city_temp">
        <t t-call="report.external_layout">
            <div class="page">
                <div class="oe_structure"/>
                    <div class="row">
                    <center>
                        <b>
                            <h4>Customer Invoices By City</h4>
                        </b>
                    </center>
                    <center>
                        <b>
                            <span t-esc="start_date"/>
                            To
                            <span t-esc="end_date"/>
                        </b>
                    </center>
                </div>
                <br/>
                <t t-foreach="data.keys()" t-as="city">
                    <center>
                        <b>
                            <span t-esc="city"/>
                        </b>
                    </center>
                    
                    <t t-set="total_sum" t-value="0"/>
                    <t t-set="current_partner" t-value="a"/>
                    <t t-set="amount_total_invoice" t-value="0"/>

                    <t t-foreach="data[city]" t-as="invoices">
                        <t t-if="invoices[2] == []">
                            <table class="table table-condensed table-striped">
                                <thead >
                                    <tr>
                                        <th>Pelanggan</th>
                                        <th class="text-right">Kredit Limit</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            <span t-esc="invoices[0]"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-esc="'{:,}'.format(invoices[1])"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </t>
                        <t t-else="">
                            <t t-foreach="invoices[2]" t-as="invoice">
                                <table class="table table-condensed table-striped">
                                    <thead >
                                        <tr>
                                            <th>Pelanggan</th>
                                            <th>Salesperson</th>
                                            <th>Sumber Dokumen</th>
                                            <th class="text-right">Tanggal Tagihan</th>
                                            <th class="text-right">Tanggal Jatuh Tempo</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>
                                                <span t-esc="invoices[0]"/>
                                            </td>
                                            <td>
                                                <span t-esc="invoice[6]"/>
                                            </td>
                                            <td>
                                                <span t-esc="invoice[3]"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="invoice[0]"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-esc="invoice[2]"/>
                                            </td>
                                        </tr>
                                        <tr><td colspan="5"></td></tr>
                                        <tr>
                                            <tr>
                                                <td><b>No Transaksi</b></td>
                                                <td class="text-right"><b>Kredit Limit</b></td>
                                                <td class="text-right"><b>Sisa Kredit Limit</b></td>
                                                <td class="text-right"><b>Total Tagihan</b></td>
                                                <td class="text-right"><b>Sisa Tagihan</b></td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <span t-esc="invoice[1]"/>
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="'{:,}'.format(invoices[1])"/>
                                                </td>
                                                <td class="text-right">
                                                    <t t-if="current_partner == invoices[0]">
                                                        <t t-set="amount_total_invoice" t-value="amount_total_invoice + invoice[5]"/>
                                                    </t>
                                                    <t t-else="">
                                                        <t t-set="current_partner" t-value="invoices[0]"/>
                                                        <t t-set="amount_total_invoice" t-value="invoice[5]"/>
                                                    </t>
                                                    <span t-esc="'{:,}'.format(invoices[1]-amount_total_invoice)"/>
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="'{:,}'.format(invoice[4])"/>
                                                </td>
                                                <td class="text-right">
                                                    <span t-esc="'{:,}'.format(invoice[5])"/>
                                                    <t t-set="total_sum" t-value="total_sum + invoice[5]"/>
                                                </td>
                                            </tr>
                                        </tr>
                                    </tbody>
                                </table>
                            </t>
                        </t>
                    </t>

                    <div class="row">
                        <div class="col-xs-4 pull-right">
                            <table class="table table-condensed">
                                <tr>
                                    <td><strong>Total</strong></td>
                                    <td class="text-right">
                                        <span t-esc="'{:,}'.format(total_sum)"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </t>
            </div>
        </t>
    </template>
</odoo>